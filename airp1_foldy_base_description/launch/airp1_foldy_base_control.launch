<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find airp1_foldy_base_description)/config/airp1_foldy_base_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="control_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/airp1_foldy_base" args="joint_state_controller
					  base_left_omniwheel_joint_velocity_controller
					  base_right_omniwheel_joint_velocity_controller
					  base_back_omniwheel_joint_velocity_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/airp1_foldy_base/joint_states" />
  </node>

</launch>
